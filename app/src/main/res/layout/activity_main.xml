<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/star_advance"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/img_main"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/school"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:paddingTop="10px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:background="#2F6E32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Quyết Tâm Vào 10"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:weightSum="5"
            android:background="@drawable/shape_corner"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/math"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/study_math" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center"
                                    android:text="Toán"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/literature"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/study_literature" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center"
                                    android:text="Văn"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/english"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/study_english" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center"
                                    android:text="Tiếng Anh"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/history"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/study_history" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center"
                                    android:text="Lịch Sử"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/TinhDiem"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/tinhdiem" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center|bottom"
                                    android:text="Tính Điểm"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/shareFunction"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:backgroundTint="#2F6E32"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:weightSum="2"
                                android:gravity="center"
                                android:layout_weight="1.5">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sharing" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#255928"
                                    android:gravity="center|bottom"
                                    android:text="Chia Sẻ"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!--
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/advanceFunction"
                                            android:layout_columnWeight="1"
                                            android:layout_rowWeight="1"
                                            android:layout_gravity="center"
                                            android:backgroundTint="#2F6E32"
                                            app:cardCornerRadius="12dp"
                                            android:layout_margin="12dp">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:weightSum="2"
                                                android:layout_width="130dp"
                                                android:layout_height="130dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="1.5">
                                                    <ImageView
                                                        android:src="@drawable/settings"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"/>
                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="0.5">
                                                    <TextView
                                                        android:background="#255928"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:text="Advanced"
                                                        android:gravity="center|bottom"
                                                        android:textColor="@color/white"
                                                        android:textSize="20dp"
                                                        android:typeface="monospace" />
                                                </LinearLayout>
                                            </LinearLayout>

                                        </androidx.cardview.widget.CardView>
                    -->

                </GridLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:background="#255928"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.startapp.sdk.ads.banner.Banner
                android:id="@+id/banner_main_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>