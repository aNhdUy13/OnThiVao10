<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/school"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingTop="10px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:background="#2F6E32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Quyết Tâm Vào 10"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:weightSum="5"
        android:background="@drawable/shape_corner"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#2F6E32"
                    android:id="@+id/math"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/study_math"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Toán"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/literature"
                    android:backgroundTint="#2F6E32"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/study_literature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Văn"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/english"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#2F6E32"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/study_english"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Tiếng Anh"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/history"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:backgroundTint="#2F6E32"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/study_history"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Lịch Sử"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/TinhDiem"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#2F6E32"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/tinhdiem"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Tính Điểm"
                                android:gravity="center|bottom"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/advanceFunction"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="#2F6E32"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="130dp"
                        android:layout_height="130dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5">
                            <ImageView
                                android:src="@drawable/settings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:background="#255928"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Advanced"
                                android:gravity="center|bottom"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:typeface="monospace" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.startapp.sdk.ads.banner.Banner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>





</LinearLayout>