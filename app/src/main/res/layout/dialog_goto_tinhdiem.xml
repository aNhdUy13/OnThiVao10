<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="230dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title_luyenTap"
                    android:text="Phần Mềm Tính Điểm \n(CHƯA TẢI)"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:background="#2F6E32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <LinearLayout
                    android:id="@+id/ll_link_luyenNao"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_link"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/txtLink"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="https://play.google.com/store/apps/details?id=com.nda.grade_calculator"
                        android:textSize="15dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/copy_Link_text"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_copy_text"
                        android:layout_width="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:id="@+id/searchLink_openapp"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center"
                    android:text="Tải Về"
                    android:drawableLeft="@drawable/search"
                    android:backgroundTint="#255928"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>