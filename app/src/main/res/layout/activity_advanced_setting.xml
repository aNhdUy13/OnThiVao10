<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A9C5D"
    tools:context=".advanced_setting">
    <LinearLayout
        android:background="#2F6E32"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/top_navi_title"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:text="Tính Năng Nâng Cao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="8.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:columnCount="1"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/adblock"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="#2F6E32"

                            android:weightSum="2"
                            android:layout_width="250dp"
                            android:layout_height="180dp">
                            <LinearLayout
                                android:layout_weight="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">
                                <ImageView
                                    android:src="@drawable/adblock"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3">
                                <TextView
                                    android:background="#255928"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Loại Bỏ Quảng Cáo"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center"
                    android:background="#5A9C5D"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/btn_purchase_adBlock"
                        android:text="Mua Luôn"
                        android:backgroundTint="#FFC107"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/math"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="#2F6E32"

                            android:weightSum="2"
                            android:layout_width="250dp"
                            android:layout_height="180dp">
                            <LinearLayout
                                android:layout_weight="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">
                                <ImageView
                                    android:src="@drawable/study_math"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3">
                                <TextView
                                    android:background="#255928"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="50 Bộ Đề Toán"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center"
                    android:background="#5A9C5D"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/purchase_50_dethi_toan"
                        android:text="Mua Luôn"
                        android:backgroundTint="#FFC107"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/van"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="#2F6E32"

                            android:weightSum="2"
                            android:layout_width="250dp"
                            android:layout_height="180dp">
                            <LinearLayout
                                android:layout_weight="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">
                                <ImageView
                                    android:src="@drawable/study_literature"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3">
                                <TextView
                                    android:background="#255928"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="50 Bộ Đề Văn"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center"
                    android:background="#5A9C5D"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/purchase_50_dethi_van"
                        android:text="Mua Luôn"
                        android:backgroundTint="#FFC107"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:id="@+id/anh"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="#2F6E32"

                            android:weightSum="2"
                            android:layout_width="250dp"
                            android:layout_height="180dp">
                            <LinearLayout
                                android:layout_weight="0.1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5">
                                <ImageView
                                    android:src="@drawable/study_english"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3">
                                <TextView
                                    android:background="#255928"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="50 Bộ Đề Anh"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:typeface="monospace" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center"
                    android:background="#5A9C5D"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/purchase_50_dethi_anh"
                        android:text="Mua Luôn"
                        android:backgroundTint="#FFC107"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </GridLayout>
        </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>


</LinearLayout>